<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SettingArrageTimeActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_gray"
        >
        <ImageView
            android:id="@+id/iv_arragetime_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="上班时间"
            android:textColor="@color/colorWhite"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="早班:"
            android:textSize="35sp"
            android:textColor="@color/btn_blue_normal"
            />
        <TextView
            android:id="@+id/tv_morning_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_morning_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - - "
            android:textSize="30sp"
            android:layout_toRightOf="@id/tv_morning_start"
            />
        <TextView
            android:id="@+id/tv_morning_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="30sp"
            android:layout_toRightOf="@id/tv_morning_line"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中班:"
            android:textSize="35sp"
            android:textColor="@color/btn_blue_normal"
            />
        <TextView
            android:id="@+id/tv_afternoon_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_afternoon_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - - "
            android:textSize="30sp"
            android:layout_toRightOf="@id/tv_afternoon_start"
            />
        <TextView
            android:id="@+id/tv_afternoon_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textSize="30sp"
            android:layout_toRightOf="@id/tv_afternoon_line"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚班:"
            android:textSize="35sp"
            android:textColor="@color/btn_blue_normal"
            />
        <TextView
            android:id="@+id/tv_evening_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_evening_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - - "
            android:textSize="30sp"
            android:layout_toRightOf="@id/tv_evening_start"
            />
        <TextView
            android:id="@+id/tv_evening_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:00"
            android:textSize="30sp"
            android:layout_toRightOf="@id/tv_evening_line"
            />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>