<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RecordSalaryActivity"
    android:orientation="vertical"
    android:background="#f6f8f7"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_gray"
        >
        <ImageView
            android:id="@+id/iv_back_recordsalary"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="记录工资"
            android:textColor="@color/colorWhite"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓  名"
                android:layout_centerVertical="true"
                android:textSize="35sp"
                />
            <TextView
                android:id="@+id/tv_name_record"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="例：张  三"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪  资"
                android:layout_centerVertical="true"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/et_wage_record"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="例：30元/h"
                android:gravity="center"
                android:inputType="number"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工 时"
                android:layout_centerVertical="true"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/et_term_record"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="例：   1h    "
                android:gravity="center"
                android:inputType="number"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/btn_term_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:layout_alignParentRight="true"
                android:textSize="35sp"
                android:layout_centerVertical="true"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班 次"
                android:layout_centerVertical="true"
                android:textSize="35sp"
                />
            <TextView
                android:id="@+id/tv_shift_record"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="例：   早    "
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/btn_shift_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:layout_alignParentRight="true"
                android:textSize="35sp"
                android:layout_centerVertical="true"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="语音填写例：时间为5小时"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_voice_record"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="语音填写"
            android:textSize="35sp"
            android:visibility="gone"
            android:layout_above="@id/btn_record"
            />
        <Button
            android:id="@+id/btn_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="记录"
            android:textSize="35sp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>